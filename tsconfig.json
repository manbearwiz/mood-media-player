{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2016", "dom.iterable"],
        "module": "commonjs",
        "moduleResolution": "node",
        "types": ["node"],
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./lib",
        "declaration": true,
        "skipLibCheck": true,
    },
    "include": [
        "./src/**/*.ts"
    ]
}